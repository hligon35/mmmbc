# Admin Dashboard configuration
# Copy to .env (do not commit .env)

# Required: master admin credentials (used to seed/update the master account)
ADMIN_EMAIL=
ADMIN_PASSWORD=

# Required: session cookie signing secret (use a long random string)
SESSION_SECRET=

# Optional: bind address/port
# - Render: leave HOST blank (binds 0.0.0.0) and set PORT from Render
# - Raspberry Pi behind nginx: HOST=127.0.0.1
HOST=
PORT=8787

# Optional: base URL used for invite links/QR-related links.
# Render example: https://your-service.onrender.com
PUBLIC_BASE_URL=

# Optional: reverse proxy / HTTPS behavior
# - Render: TRUST_PROXY=true, ENFORCE_HTTPS=true (or omit ENFORCE_HTTPS and rely on NODE_ENV=production default)
# - Pi LAN-only without TLS: TRUST_PROXY=false, ENFORCE_HTTPS=false
TRUST_PROXY=
ENFORCE_HTTPS=

# Optional: CSP is off by default to avoid breaking inline scripts/styles.
ENABLE_CSP=false

# Optional: allow updates to files in repo root (gallery.json, schedule.json, theme.css)
# Set to true if you want the admin dashboard to export directly into the website.
ENABLE_EXPORTS=true

# Optional: persistent storage paths (recommended on Render + Raspberry Pi)
# ADMIN_DATA_DIR=...
# ADMIN_UPLOADS_DIR=...
# SESSIONS_DIR=...
ADMIN_DATA_DIR=
ADMIN_UPLOADS_DIR=
SESSIONS_DIR=

# Optional: encryption-at-rest key for 2FA secrets (AES-256-GCM).
# Use 32+ bytes of random material (base64 or plain); do not lose it.
DATA_ENCRYPTION_KEY=
